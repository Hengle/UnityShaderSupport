{
    "name": "unityshader-intellisense",
    "displayName": "UnityShader Support",
    "description": "Syntax highlight support to Unity shader",
    "version": "2.0.0",
    "publisher": "SardineFish",
    "engines": {
        "vscode": "^1.26.0"
    },
    "repository": "https://github.com/SardineFish/UnityShaderSupport.git",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "shaderlab",
                "aliases": [
                    "ShaderLab",
                    "shaderlab"
                ],
                "extensions": [
                    ".shader"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "shaderlab",
                "scopeName": "source.shaderlab",
                "path": "./syntaxes/shaderlab.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "shaderlab",
                "path": "./snippets/shaderlab.json"
            }
        ]
    }
}
